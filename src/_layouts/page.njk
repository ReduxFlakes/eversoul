{% extends "./base.njk" %}

{% block surfkit_base_layout %}
  {% include "pageNavigation.njk" %}
  {% block main_content %}
    {% if hero_title and hero_description %}
      <section class="hero">
        <h1 class="hero--title display__2">{{hero_title}}</h1>
        <p class="hero--subtitle subtitle__2">{{hero_description}}</p>
        {% if hero_banner %}
          <img class="{%- if hero_banner_classic -%}sk--banner{% endif %} hero--banner" src="/static/images/banners/{{hero_banner}}" alt="{{hero_banner_description | safe }}">
        {% endif %}
      </section>
    {% endif %}
    <article class="sk-layout--content">
      {{ content | safe }}
    </article>
  {% endblock main_content %}
{% endblock %}