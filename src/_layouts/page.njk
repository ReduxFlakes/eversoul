{% extends "./base.njk" %}

{% block page_layout %}
  <main class="page-container" id="main-content">
    <header>
      {% if header_title %}
        {% set hd_header = header_title %}
      {% else %}
        {% set hd_header = title %}
      {% endif %}
      <h1 id="{{hd_header| slugify}}" tabindex="-1">{{hd_header}}
        <a href="#{{hd_header| slugify}}" class="header-anchor">#</a>
      </h1>
      <p></p>
    </header>
    <article class="stack">
      {{ content | safe }}
    </article>
    {% include "aside.njk" %}
    <footer>
      <p>Last update: {{date}}</p>
    </footer>
  </main>
{% endblock %}