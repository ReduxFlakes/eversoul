{% extends "./page.njk" %}
{% block sk_panel %}
  <header class="sk-panel-header">
    <h1 class="sk-panel-header__title" id="{{ title | slugify }}">
      {{post_type}} - {{title}}
    </h1>
    <div class="sk-panel-options">
      <button class="sk-panel-button" onclick="copyShare()">
        <img src="/static/icons/32/share.png" alt="Open share icon"/>Share
    </button>
    </div>
  </header>
{% endblock sk_panel %}
{% block main_content %}
  <header class="post-header">
    <h1 class="post-header__title">
      {{ title }}
    </h1>
    <p class="post-header__description">
      <time class="post-header__date" datetime="{{ date }}">{{
      date | PostDate
    }}</time> &#x2758; {{ description }}</p>
  </header>
  <article id="main">
    {{ content | safe }}
  </article>
  <style>
    .post-header {
      max-width: 84ch;
      margin: 0 auto;
      padding: var(--spacing);
    }
    .post-header__date {
      color: rgb(255, 255, 255);
      font-style: italic;
    }
    .post-header__description {
      margin-top: 1em;
      font-size: 1.05em;
      color: rgba(255, 255, 255, 0.8);
    }
  </style>
{% endblock main_content %}