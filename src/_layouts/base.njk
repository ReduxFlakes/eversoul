<!DOCTYPE html>
<html lang="{{ meta.lang }}">
  {% include "head.njk" %}
  <body class="app-wrapper content-grid">
    <a href="#main-content" class="sk-button acs-skip">Skip to main content</a>
    {% include "toolbar.njk" %}
    {% include "header.njk" %}
    {% include "pageNavigation.njk" %}
    {% block page_layout %}
      <main class="home-container" id="main-content">
        <header>
          {% if header_title %}
            {% set hd_header = header_title %}
          {% else %}
            {% set hd_header = title %}
          {% endif %}
          <h1 id="{{hd_header| slugify}}" tabindex="-1">{{hd_header}}
            <a href="#{{hd_header| slugify}}" class="header-anchor">#</a>
          </h1>
          <p></p>
        </header>
        <article class="stack">
          {{ content | safe }}
        </article>
        <aside>
          {% include "quickies.njk" %}
        </aside>
      </main>
    {% endblock page_layout %}
    {% include "footer.njk" %}
  </body>
</html>